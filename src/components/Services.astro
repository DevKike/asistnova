---
const services = [
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
        </svg>`,
        title: 'Recursos Humanos',
        description: 'Gestión integral del talento humano de tu organización.',
        details: [
            'Reclutamiento y selección de personal',
            'Evaluación de desempeño',
            'Capacitación y desarrollo',
            'Inducción y evaluación laboral',
            'Diseño y seguimiento a plan de formación',
            'Organización documental',
            'Elaboración de manual de funciones'
        ]
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 6h18"/>
            <path d="M7 12h10"/>
            <path d="M10 18h4"/>
            <path d="M21 2H3a1 1 0 0 0-1 1v18a1 1 0 0 0 1 1h18a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1Z"/>
        </svg>`,
        title: 'Asesoría Legal',
        description: 'Soporte jurídico especializado en derecho laboral.',
        details: [
            'Elaboración de contratos',
            'Asesoría en despidos y reglamentos internos',
            'Cumplimiento normativo',
            'Procesos disciplinarios',
            'Descargos y llamados de atención',
            'Negociación Colectiva',
            'Solución de conflictos laborales'
        ]
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
            <path d="M9 12l2 2 4-4"/>
        </svg>`,
        title: 'Salud y Seguridad en el Trabajo',
        description: 'Implementación y gestión del sistema SG-SST.',
        details: [
            'Elaboración e implementación del SG-SST',
            'Análisis de riesgos laborales',
            'Plan de capacitaciones',
            'Investigación de accidentes',
            'Seguimiento de ausentismo laboral',
            'Manejo de indicadores',
            'Control de accidentalidad laboral'
        ]
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 11l3 3L22 4"/>
            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
        </svg>`,
        title: 'Gestión de Calidad',
        description: 'Optimización de procesos y certificaciones de calidad.',
        details: [
            'Implementación de sistemas ISO 9001',
            'Auditorías internas',
            'Mejora continua de procesos',
            'Manejo de gestión documental',
            'Listado y organización de documentos',
            'Caracterización de quejas y reclamos',
            'Seguimiento de indicadores de calidad'
        ]
    },
];
---

<section id="servicios" class="services">
    <div class="container">
        <div class="section-header">
            <span class="badge">Nuestros Servicios</span>
            <h2>Soluciones integrales para <span class="gradient">tu empresa</span></h2>
            <p>Acompañamiento profesional en cada área estratégica de tu organización</p>
        </div>

        <div class="services-grid">
            {services.map((service) => (
                <div class="service-card">
                    <div class="service-icon" set:html={service.icon}></div>
                    <h3>{service.title}</h3>
                    <p class="service-description">{service.description}</p>
                    
                    <div class="service-details">
                        <strong>Servicios incluidos:</strong>
                        <ul>
                            {service.details.map((detail) => (
                                <li>{detail}</li>
                            ))}
                        </ul>
                    </div>
                    
                    <a href="#contacto" class="service-link">
                        Solicitar información →
                    </a>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .services {
        padding: 6rem 2rem;
        background: white;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(14, 165, 233, 0.1);
        color: #0ea5e9;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .section-header h2 {
        margin-bottom: 1rem;
    }

    .gradient {
        background: linear-gradient(135deg, #0ea5e9 0%, #10b981 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .section-header p {
        color: #64748b;
        font-size: 1.125rem;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
    }

    .service-card {
        background: linear-gradient(135deg, #f0f9ff 0%, #ffffff 100%);
        padding: 2rem;
        border-radius: 20px;
        border: 2px solid #e0f2fe;
        transition: all 0.3s ease;
        cursor: pointer;
        display: flex;
        flex-direction: column;
    }

    .service-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(14, 165, 233, 0.15);
        border-color: #0ea5e9;
    }

    .service-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #0ea5e9 0%, #10b981 100%);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .service-icon :global(svg) {
        color: white;
        stroke: white;
    }

    .service-card:hover .service-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .service-card h3 {
        margin-bottom: 0.75rem;
        color: #1e293b;
        font-size: 1.15rem;
    }

    .service-description {
        color: #0ea5e9;
        line-height: 1.5;
        margin-bottom: 1.25rem;
        font-weight: 500;
        font-size: 0.9rem;
    }

    .service-details {
        background: white;
        padding: 1.25rem;
        border-radius: 12px;
        margin-bottom: 1.25rem;
        border: 1px solid #e0f2fe;
        flex-grow: 1;
    }

    .service-details strong {
        color: #1e293b;
        display: block;
        margin-bottom: 0.75rem;
        font-size: 0.9rem;
    }

    .service-details ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .service-details li {
        color: #64748b;
        padding: 0.4rem 0;
        padding-left: 1.25rem;
        position: relative;
        font-size: 0.85rem;
        line-height: 1.4;
    }

    .service-details li::before {
        content: '✓';
        position: absolute;
        left: 0;
        color: #10b981;
        font-weight: bold;
        font-size: 0.85rem;
    }

    .service-link {
        color: #0ea5e9;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        transition: gap 0.3s ease;
        margin-top: auto;
        font-size: 0.9rem;
    }

    .service-card:hover .service-link {
        gap: 0.5rem;
    }

    @media (max-width: 1200px) {
        .services-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .services {
            padding: 4rem 1.5rem;
        }

        .services-grid {
            grid-template-columns: 1fr;
        }

        .service-card {
            padding: 2rem;
        }

        .service-icon {
            width: 50px;
            height: 50px;
        }

        .service-icon :global(svg) {
            width: 30px;
            height: 30px;
        }

        .service-card h3 {
            font-size: 1.25rem;
        }

        .service-description {
            font-size: 1rem;
        }

        .service-details li {
            font-size: 0.9rem;
        }
    }
</style>